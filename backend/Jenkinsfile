pipeline {
    agent any


    stages {


        stage('Build') {
                    when {
                        branch 'main'
                    }
                    steps {
                        sh './gradlew build --scan -x test'
                    }

                }

        // General build strategy
        stage('bootJar') {
            when {
                branch 'main'
            }
            steps {
                sh './gradlew bootJar'
            }
            post {

                cleanup {
                    dir('build') {
                        //sh 'rm -rf docs'
                        sh 'rm -rf reports'
                        //sh 'rm -rf test-results'
                    }
                }

            }
        }



        stage('Delivery') {
            when {
                branch 'main'
                }
            steps {
                script {
                    // –ö–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ JAR —Ñ–∞–π–ª–∞ –Ω–∞ —É–¥–∞–ª–µ–Ω–Ω—ã–π —Å–µ—Ä–≤–µ—Ä —á–µ—Ä–µ–∑ scp —Å –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ–º sshagent

                        sh "rsync -avz --delete --force build/libs/ root@104.248.133.133:/var/www/educa.theomnia.ru/app"

                }
            }

        }

        stage('Run') {
            when {
                branch 'main'
                 }
            steps {
                script {
                    // –ó–∞–ø—É—Å–∫ –¥–µ–º–æ–Ω–∞ —Å–µ—Ä–≤–∏—Å–∞ –Ω–∞ —É–¥–∞–ª–µ–Ω–Ω–æ–º —Å–µ—Ä–≤–µ—Ä–µ

                    sh 'ssh root@104.248.133.133 "sudo systemctl restart educa.service"'

                }

            }
            post {
                success {
                    echo '–ñ–¥–µ–º 30 —Å–µ–∫—É–Ω–¥...'
                    sleep time: 30, unit: 'SECONDS'
                }
            }
        }

        stage('Status') {
                    when {
                        branch 'main'
                        }
                    steps {
                        script {
                            // –ó–∞–ø—É—Å–∫ –¥–µ–º–æ–Ω–∞ —Å–µ—Ä–≤–∏—Å–∞ –Ω–∞ —É–¥–∞–ª–µ–Ω–Ω–æ–º —Å–µ—Ä–≤–µ—Ä–µ

                            sh 'ssh root@104.248.133.133 "sudo systemctl status educa.service"'

                        }
                    }
                }

        stage('Check Server Health') {
                    when {
                          branch 'main'
                          }
                    steps {
                        script {
                            def response = sh(script: 'curl -I -s -o /dev/null -w "%{http_code}" https://educa.theomnia.ru/api/actuator/health', returnStdout: true).trim()

                            if (response == '200') {
                                echo 'Server is healthy! üü¢'
                            } else {
                                error 'Server is not healthy! üî¥'
                            }
                        }
                    }
                }

    }
    post {
        always {
          cleanWs()
        }
      }
}